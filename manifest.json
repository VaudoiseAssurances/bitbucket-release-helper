{
  "name": "Bitbucket release helper",
  "version": "1.3.0",
  "description": "Browser extension that simplifies the release process at Vaudoise",
  "homepage_url": "https://github.com/VaudoiseAssurances/bitbucket-release-helper",
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "{9b2acc57-3282-4c1b-8293-374bb9cfaae5}",
      "strict_min_version": "61.0"
    }
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "contextMenus",
    "activeTab",
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://git.vaudoise.ch/*"
      ],
      "css": ["content.css"],
      "js": ["browser-polyfill.min.js", "content.js"]
    }
  ]
}
